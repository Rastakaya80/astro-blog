---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import error from "../assets/error-404.png";
---

<MainLayout title="Error 404-Page Not Found">
<div class="flex flex-col items-center justify-items-center gap-7">
  <Image src={error} alt="Error-404" height={250} width={250} class="mt-10" quality={"mid"} />
  <h1 class="text-5xl">Page Not Found</h1>
  <p class="text-2xl mt-10">Sorry, we couldn't find the page you were looking for.</p>
  <a href="/" class="inline-block bg-gray-200 p-2 mb-6 hover:bg-indigo-500 hover:text-white">
    Take Me Back Home
  </a>
</div>
</MainLayout>